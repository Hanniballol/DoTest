<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.msymobile.dotest.ui.main.MainActivity">

    <TextView
        android:id="@+id/fixer_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:gravity="center"
        android:text="@string/fixer_helper"
        android:textColor="@android:color/black"
        android:textSize="@dimen/nav_bar_text_size"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/refresh_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/nav_bar_height"
        android:background="@android:color/transparent"
        android:text="@string/refresh"
        android:textColor="@android:color/black"
        android:textSize="@dimen/refresh_text_size"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/nav_bar_height"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
